import java.util.Scanner;

class Main {
          public static void main(String[] args) {
        
        Scanner entrada = new Scanner(System.in);
        int n = entrada.nextInt();
        int x = 60;
        int minute = n / x;
        int second = n % x;
        int hour = minute / x;
        minute = minute % x;
        System.out.println(hour + ":" + minute + ":" + second);
            
        }
    }
