import java.util.Scanner;

public class ex11 {
    
    public static double calcula_raio(double raio) {
        return ((4.0 / 3) * 3.14159 * (Math.pow(3, raio)));
    }

    public static void main(String[] args) {
        Scanner entrada = new Scanner(System.in);
        double R = entrada.nextDouble();
        System.out.printf("VOLUME = %.3f", calcula_raio(R));
        System.out.println();

    }
}

